{
    "compilerOptions": {
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "declarationDir": "lib/types",
      "esModuleInterop": true,
      "outDir": "./lib",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "module": "esnext",
      "moduleResolution": "node",
      "noEmit": true,
      "resolveJsonModule": true,
      "rootDir": "./src",
      "sourceMap": false,
      "strict": true,
      "target": "es5",
    },
    "include": ["src/**/*"],
    "exclude": ["**/node_modules", "**/build", "**/dist", "**/*.md", "**/rollup.config.js"]
  }